---
import { DEV } from 'esm-env';
import { ClientRouter } from 'astro:transitions';
import { twMerge } from '@daks.dev/astro.sdk';
import { Head, Toast, YandexMetrika, YandexMetrikaHit } from '@daks.dev/astro.sdk/astro';
import { Navbar, Sidebar, Footer } from '@components/astro';
import type { HTMLAttributes } from 'astro/types';

import '@assets/fonts/roboto/cyrillic.css';

import '@styles/global.css';

interface Props extends Omit<HTMLAttributes<'div'>, 'class' | 'title'> {
  schema?: string;
  class?: ClassValue;
  title: string;
  description: string;
  robots?: string;
  noMetrika?: boolean;
  noPwa?: boolean;
}

const {
  schema = 'WebPage',
  class: className,
  title,
  description,
  robots,
  noMetrika = DEV,
  noPwa,
  ...props
} = Astro.props;

import { app, seo } from '@app/configs';
const {
  yandex: { counter }
} = seo;

import logo from '@assets/images/nic/logo.navbar.webp';

const fonts: string[] = Object.values(
  import.meta.glob('@assets/fonts/roboto/*.woff2', {
    query: '?url',
    eager: true,
    import: 'default'
  })
);
---

<html
  lang='en'
  class='theme-dark'>
  <head>
    <Head
      {title}
      {description}
      {robots}
      {app}
      rss='/rss.xml'>
      <Fragment slot='preload'>
        {
          fonts.map((x) => (
            <link
              rel='preload'
              href={x}
              as='font'
              type='font/woff2'
              crossorigin
            />
          ))
        }
        <link
          rel='preload'
          href={logo.src}
          as='image'
          type={`image/${logo.format}`}
        />
      </Fragment>
    </Head>

    <ClientRouter />
  </head>

  <body
    itemscope
    itemtype={`https://schema.org/${schema}`}>
    <div
      class={twMerge('relative flex min-h-screen flex-col', className)}
      {...props}>
      <slot />
      <Navbar />
      <Sidebar />
      <Footer />
      <Toast
        class:list={[
          'bottom-4 left-1/2 -translate-x-1/2',
          'rounded-sm ring-1 ring-theme-inner',
          'text-sm tracking-wider',
          'bg-theme-frame/90'
        ]}
      />
    </div>
    {
      !noMetrika && (
        <>
          <YandexMetrika {counter} />
          <YandexMetrikaHit
            {counter}
            {title}
          />
        </>
      )
    }
    {!noPwa && <script>if (typeof window !== 'undefined') import('../pwa')</script>}
  </body>
</html>
